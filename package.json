{
  "name": "micro-frontend-workspace",
  "version": "1.0.0",
  "description": "Micro Frontend workspace with Module Federation and Nx",
  "private": true,
  "scripts": {
    "start": "nx run-many -t serve --parallel=3",
    "start:dev": "concurrently \"nx serve header-mfe\" \"nx serve products-mfe\" \"nx serve shell\"",
    "start:header": "nx serve header-mfe",
    "start:products": "nx serve products-mfe",
    "start:shell": "nx serve shell",
    "build": "nx run-many -t build --parallel=3",
    "build:prod": "nx run-many -t build --configuration=production --parallel=3",
    "build:header": "nx build header-mfe",
    "build:products": "nx build products-mfe",
    "build:shell": "nx build shell",
    "test": "nx run-many -t test",
    "test:watch": "nx run-many -t test --watch",
    "test:coverage": "nx run-many -t test --coverage",
    "lint": "nx run-many -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "graph": "nx graph",
    "dep-graph": "nx dep-graph",
    "affected:build": "nx affected -t build",
    "affected:test": "nx affected -t test",
    "affected:lint": "nx affected -t lint",
    "format:check": "nx format:check",
    "format:write": "nx format:write",
    "reset": "nx reset",
    "clean": "nx reset && rm -rf node_modules dist && npm install"
  },
  "devDependencies": {
    "@nx/eslint": "^21.1.2",
    "@nx/jest": "^21.1.2",
    "@nx/nx-darwin-x64": "21.1.2",
    "@nx/webpack": "^21.1.2",
    "@types/react": "^19.1.6",
    "concurrently": "^8.2.2",
    "nx": "21.1.2"
  }
}
